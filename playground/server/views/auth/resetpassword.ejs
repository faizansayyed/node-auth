<%- include('../partials/header'); -%>
  <main>
    <div class="container">
      <%- include('../partials/messages');%>

        <div class="card bg-light" id="signup">
          <article class="card-body mx-auto">
            <h4 class="card-title mt-3 text-center">Reset password</h4>
            <p class="text-center">Please enter your email address.</p>

            <form action="/auth/resetpassword" autocomplete="off" method="POST">


              <div class="form-group input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input name="email"
                  class="form-control <%=locals.errors && errors.includes('email') ? 'is-invalid' : ''%>"
                  placeholder="E-Mail" type="text" value="<%=locals.data && data.email ? data.email : '' %>">
              </div> <!-- form-group// -->

              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Reset password</button>
              </div> <!-- form-group// -->


            </form>
          </article>
        </div>
    </div>
  </main>
  <%- include('../partials/footer'); -%>