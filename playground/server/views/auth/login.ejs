<%- include('../partials/header'); -%>
  <main>
    <div class="container">
      <%- include('../partials/messages');%>

        <div class="card bg-light" id="signup">
          <article class="card-body mx-auto">
            <h4 class="card-title mt-3 text-center">Login</h4>
            <p class="text-center">Please use your credentials to log in</p>

            <form action="/auth/login" autocomplete="off" method="POST">

              <div class="form-group input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input name="username" class="form-control" placeholder="Username" type="text">
              </div> <!-- form-group// -->

              <div class="form-group input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input class="form-control" name="password" placeholder="Password" type="password"
                  autocomplete="new-password">
              </div> <!-- form-group// -->

              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberme" name="remember" value="1">
                <label class="form-check-label" for="rememberme">Remember me</label>
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Login </button>
              </div> <!-- form-group// -->
              <p class="divider-text">
                <span class="bg-light">OR</span>
              </p>
              <p>
                <a href="/auth/github" class="btn btn-block btn-github"> <i class="fab fa-github"></i> Â  Log in via
                  GitHub</a>
              </p>
              <p class="divider-text">
                <span class="bg-light">You don't have an account already?</span>
              </p>
              <p class="text-center">
                <a class="btn btn-block btn-secondary" href="/auth/register">Register</a>
              </p>
            </form>
          </article>
        </div>
    </div>
  </main>
  <%- include('../partials/footer'); -%>